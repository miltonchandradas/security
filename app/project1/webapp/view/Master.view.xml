<mvc:View controllerName="project1.controller.Master"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table id="masterTable" items="{path: '/Employees', sorter: { path: 'priority'}}" class="sapUiMediumMarginTop">
                <infoToolbar>
                    <OverflowToolbar>
                        <Label text="List of active employees"/>
                    </OverflowToolbar>
                </infoToolbar>
                <columns>
                    <Column >
                        <Text text="First Name"></Text>
                    </Column>
                    <Column >
                        <Text text="Last Name"></Text>
                    </Column>
                    <Column >
                        <Text text="Email"></Text>
                    </Column>
                    <Column >
                        <Text text="Priority"></Text>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem >
                        <Input value="{firstName}" editable="false"></Input>
                        <Input value="{lastName}" editable="false"></Input>
                        <Input value="{email}" editable="false"></Input>
                        <Label text="{priority}"></Label>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
